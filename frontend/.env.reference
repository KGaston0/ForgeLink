# ========================================
# FORGELINK - Environment Variables
# REFERENCIA PARA EL FUTURO
# ========================================

# ========================================
# DESARROLLO (.env.development)
# ========================================
VITE_API_URL=http://localhost:8000/api
VITE_APP_ENV=development
VITE_APP_NAME=ForgeLink
VITE_APP_VERSION=0.1.0

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_DEBUG_MODE=true

# API Keys (vacías en dev)
VITE_GOOGLE_OAUTH_CLIENT_ID=
VITE_SENTRY_DSN=
VITE_MIXPANEL_TOKEN=

# ========================================
# STAGING (.env.staging) - Para cuando tengas servidor staging
# ========================================
# VITE_API_URL=https://staging-api.forgelink.com/api
# VITE_APP_ENV=staging
# VITE_APP_NAME=ForgeLink (Staging)
# VITE_APP_VERSION=0.2.0

# Features
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_DEBUG_MODE=true

# API Keys (de testing)
# VITE_GOOGLE_OAUTH_CLIENT_ID=your-staging-client-id
# VITE_SENTRY_DSN=your-staging-sentry-dsn
# VITE_MIXPANEL_TOKEN=your-staging-mixpanel-token

# ========================================
# PRODUCCIÓN (.env.production) - Para cuando despliegues
# ========================================
# VITE_API_URL=https://api.forgelink.com/api
# VITE_APP_ENV=production
# VITE_APP_NAME=ForgeLink
# VITE_APP_VERSION=1.0.0

# Features
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_DEBUG_MODE=false

# API Keys (reales)
# VITE_GOOGLE_OAUTH_CLIENT_ID=your-production-client-id
# VITE_SENTRY_DSN=your-production-sentry-dsn
# VITE_MIXPANEL_TOKEN=your-production-mixpanel-token

# ========================================
# NOTAS:
# ========================================
# 1. Nunca commitees archivos .env reales (están en .gitignore)
# 2. Este archivo es SOLO referencia
# 3. Copia este archivo a .env.local cuando necesites configurar
# 4. Las variables con VITE_ son accesibles en el frontend
# 5. En producción, configura estas en tu hosting (Vercel, Netlify, etc.)

